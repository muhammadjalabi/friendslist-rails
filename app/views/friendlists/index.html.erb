<h1>Friendlists</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr class="text-center">
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @friendlists.each do |friendlist| %>
      <tr>
        <td><%= friendlist.first_name %></td>
        <td><%= friendlist.last_name %></td>
        <td><%= friendlist.email %></td>
        <td><%= friendlist.phone %></td>
        <td><%= friendlist.twitter %></td>
        <td class="table-info"><%= link_to 'Show', friendlist, class: 'btn btn-info' %></td>
        <td class="table-warning"><%= link_to 'Edit', edit_friendlist_path(friendlist), class: 'btn btn-warning' %></td>
        <td class="table-danger"><%= link_to 'Destroy', friendlist, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add new Friend +', new_friendlist_path, class: 'btn btn-success' %>
